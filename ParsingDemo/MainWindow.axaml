<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ParsingDemo.MainWindow"
        Title="ParsingDemo">
    <DockPanel>
        <Button DockPanel.Dock="Top" Click="OnParseButtonClick">Parse</Button>
        <Grid ColumnDefinitions="*, 4, *" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <TextBox Name="InputCodeTextBox" AcceptsReturn="True" TextWrapping="Wrap" Grid.Column="0"/>
            <GridSplitter Grid.Column="1" Background="Black" ResizeDirection="Columns"/>
            <Image Name="ParseTreeImage" Grid.Column="2"/>
        </Grid>
    </DockPanel>
</Window>
